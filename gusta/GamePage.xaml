<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gusta.GamePage">
             

<Grid> 

   <Image Source="menu.png"
          Aspect="AspectFill"/>

    <Frame BackgroundColor="Black"
           CornerRadius="20"
           Margin="5,10"
           VerticalOptions="Fill">

    <Label Text="oi"
            TextColor="Black"
            LineHeight="1.2"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            VerticalOptions="Center"
            FontSize="20"
            FontFamily="CachetStdBold"/>
    </Frame>
</Grid>
    <VerticalStackLayout
    VerticalOptions="End"
         Spacing="10"
         Margin="15, 0, 15, 45">
    
    <Button Text="Voltar"
                 Clicked="voltarmenu"
                 HeightRequest="50"
                 CornerRadius="25"
                 BackgroundColor="#e9d9c4"
                 TextColor="Black"
                 Margin="0,0,0,10"
                 FontSize="18"/>

    </VerticalStackLayout>


</ContentPage>